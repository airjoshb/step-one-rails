<!DOCTYPE html>
<html temscope itemtype=<%= content_for?(:html) ? yield(:html) : "http://schema.org/WebPage" %> >
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= favicon_link_tag %>
    <script src="https://js.stripe.com/v3/" async></script>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_importmap_tags %>
    <%= turbo_include_tags %>
    <%= auto_discovery_link_tag :rss, feed_url(:format => :rss) %>
    <%= yield(:head) %>
    <script src="https://js.supascribe.com/v1/loader/O9uML70XkKSn0ijkQmtsOIStHrq1.js" async></script>
  </head>

  <body>
    <%= yield %>
    <footer><%= render "layouts/footer" %></footer>
  </body>
</html>
