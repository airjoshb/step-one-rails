<!DOCTYPE html>
<html temscope itemtype=<%= content_for?(:html) ? yield(:html) : "http://schema.org/WebPage" %> >
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= favicon_link_tag %>
    <script src="https://js.stripe.com/v3/" async></script>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= yield(:head) %>
  </head>

  <body>
    <div id="mobile-nav" class="py-4 px-4 flex-around">
          <%= link_to root_path, class:"logo" do %>
            <%= render 'main/logo' %>
          <% end %>
          <div class="px-4">
              <%= active_link_to "Updates", update_path %>
          </div>

          <div class="px-4">
              <%= active_link_to "Crohn's Cookbook", cookbook_path %>
          </div>
          
          <div class="px-4">
              <%= active_link_to "Posts", posts_path %>
          </div>
          <div class="px-4">
              <%= active_link_to "About Joshua", about_path %>
          </div>
      </div>
    <main class="flex">
      
      <%= yield %>
      <%= render "layouts/navigation" %>
    </main>
    <footer><%= render "layouts/footer" %></footer>
  </body>
</html>
